{
  "version": 2,
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.railway.frontend"
  },
  "deploy": {
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE"
  },
  "environments": {
    "production": {
      "variables": {
        "RAILWAY_ENVIRONMENT_NAME": "production",
        "WEBUI_URL": "$RAILWAY_STATIC_URL",
        "PUBLIC_DEPLOYMENT": "true"
      }
    }
  }
}
